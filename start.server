#! /bin/bash
#
# @(#) start.server
#
# Run cnnbrk_aggregator.
NODE=/opt/bin/node
export NODE_PATH=/opt/lib/node_modules:/opt/lib/node_modules/tagg/node_modules

# Clean out prior tweets directory.
find ./public/tweets/ -type f -name '*.html' -maxdepth 1 -delete

env NODE_ENV=development $NODE ./app.js
